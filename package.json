{
    "private": true,
    "workspaces": [
        "apps/*",
        "playground/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean",
        "single-spa": "yarn workspace single-spa start",
        "qiankun": "pnpm -filter qiankun serve",
        "apps": "pnpm -filter micro-app start",
        "app1": "pnpm -filter vue-antd-pro-4 vite:dev",
        "app2": "pnpm -filter vue-antd-pro-3 serve",
        "app3": "pnpm -filter vue-antd-pro-4 serve",
        "micro-app": "npm-run-all --parallel apps app1 app2 app3"
    },
    "devDependencies": {
        "lerna": "^4.0.0",
        "npm-run-all": "^4.1.5"
    }
}